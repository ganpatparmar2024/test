<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row d-flex">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /register route -->
          <form id="form">
            <div class="col-md-6 form-group name">
              <label for="name" class="form-label">First name</label>
              <input type="text" class="form-control" id="name" required name="name">              
            </div>
            <div class="col-md-6 form-group lName">
              <label for="lName" class="form-label">Last name</label>
              <input type="text" class="form-control" id="lName" required name="lName">
            </div>
            <div class="col-md-6 form-group username">
              <label for="username" class="form-label">Username</label>
              <div class="input-group has-validation">
                <span class="input-group-text" id="inputGroupPrepend">@</span>
                <input type="text" class="form-control" id="username" aria-describedby="inputGroupPrepend" required name="username">
                <div class="invalid-feedback">
                  Please choose a username.
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <button type="button" class="btn btn-dark" onclick="submitData()">
                Register
              </button>
            </div>
            <div class="col-md-6 form-group pt-5">
              <a class="text-primary" hidden id="inactive">Click me to Activate User</a>
            </div>
            
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script  src="/js/register.js"></script>
<%- include('partials/footer') %>
