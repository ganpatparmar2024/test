<%- include('partials/header') %>
<title>Attendace Report</title>
    <title>Result</title>
</head>

<body>
    <main class="d-flex flex-column  align-items-center">
        <h1>Ganpat Hasmukhbhai Parmar</h1>
        <h2>Result Of Student</h2>

        


        <table class="table table-bordered">
            <thead class="bg-info">
                <tr>
                    <th  rowspan="2">Student Name</th>
                    <th scope="col" colspan="2">Terminal</th>
                    <th scope="col" colspan="2">Prelim</th>
                    <th scope="col" colspan="2">Final</th>
                    <th scope="col" rowspan="2">Total</th>
                    <th scope="col" rowspan="2">Report</th>
                </tr>
                <tr>
                    <th>Practical</th>
                    <th>Theory</th>
                    <th>Practical</th>
                    <th>Theory</th>
                    <th>Practical</th>
                    <th>Theory</th>
                </tr>

            </thead>
            <tbody>
                
                    
                        <% console.log(typeof(result)); %>
                        <% for( let i=0; i <result.length; i+=3 ) { %>
                            <tr>
                                <th>
                                    <%= result[i].Name %>
                                </th>
                                <% var total=0; %>
                                <% for( let j=i; j <i+3; j++) { %>
    
    
                                    <td>
                                        <%= result[j].pm %>
                                    </td>
                                    <td>
                                        <%= result[j].tm %>
                                    </td>
                                    <% total = result[j].pm + result[j].tm + total %>
                                    <% } %>
                                    <td><%= total %></td>
                                    <td><a href="http:/api/result/report?id=<%= result[i].id %>">View Report</a></td>
                                    
                            </tr>
                            <% } %> 
                            

                

            </tbody>
        </table>
        <nav aria-label="Pagination">
            <ul class="pagination">
                <% if (pid==1) { %>
                    <li class="page-item disabled">
                        <a class="page-link " href="/api/result" tabindex="-1">Start</a>
                    </li>
                    <li class="page-item disabled"><a class="page-link"
                            href="/api/result?page=<%= parseInt(pid)-1 %>">Previous</a></li>
                    <%} else{ %>
                        <li class="page-item">
                            <a class="page-link" href="/api/result?page=1" tabindex="-1">Start</a>
                        <li class="page-item"><a class="page-link"
                                href="/api/result?page=<%= parseInt(pid)-1 %>">Previous</a></li>
                        </li>
                        <% }%>


                            <li class="page-item disabled">
                                <a class="page-link" href="/api/result?page=<% pid %>">
                                    <%= pid %>
                                </a>
                            </li>
                            <% if(pid==20){ %>
                                <li class="page-item disabled"><a class="page-link"
                                        href="/api/result?page=<%= parseInt(pid)+1 %>">Next</a></li>
                                <li class="page-item disabled">
                                    <a class="page-link" href="/api/result?page=20">Last</a>
                                </li>
                                <% } else { %>
                                    <li class="page-item"><a class="page-link"
                                            href="/api/result?page=<%= parseInt(pid)+1 %>">Next</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="/api/result?page=20">Last</a>
                                    </li>
                                    <% } %>

            </ul>
        </nav>
    </main>


