<%- include('partials/header') %>
<title>Delimeter Search</title>

</head>
<body>
    <form action="/api/delimetersearch/submit" method="post">
        <div class="form-group">          
          <input type="text" class="form-control" id="sql" aria-describedby="emailHelp" placeholder="Enter Your Query" name="query" autofocus>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <% if (locals.results && locals.fields) { %>
        <table class="table table-striped table-bordered text-center ">
            <thead class="bg-info">
              <tr>
                <% fields.forEach(field => { %>
                    <th scope="col"><%= field.name %></th>
                <% }) %>
                
                
              </tr>
              
            </thead>
            <tbody>
              <% results.forEach(result => { %>
                <tr>
                    <% for( let i = 0; i < fields.length; i++ ) { %>
                        <% var na = fields[i].name %>
                        <td scope = "col"><%= result[na] %></td>
                    <% } %>
                </tr>
                
              <% }) %>
            </tbody>
          </table>
      <% }%>
        
