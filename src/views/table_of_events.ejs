<%- include('partials/header') %>
<title>Applicant Form</title>
<style>
  @keyframes mymove {
    from {
      top: 0px;
    }
    to {
      top: 100px;
    }
  }

  #col2 {
    width: 100%;
    height: 100px;
    background: orange;
    position: relative;
    font-size: 18px;
    padding: 16px;
  }
</style>
<body>
  <div
    class="row border border-3 p-1 Title"
    style="margin-left: 24rem; margin-right: 24rem"
  >
    <div class="row ml-3 text-success text-center">
      <div class="col-12">
        <h1>Ganpat Hasmukhbhai Parmar</h1>
      </div>
    </div>

    <div class="row ml-3 text-success text-center">
      <div class="col-12">
        <h1>24DEV009</h1>
      </div>
    </div>

    <div class="row ml-3 text-success text-center">
      <div class="col-12">
        <h1>FORM 5</h1>
      </div>
    </div>

    <div class="row text-center titleRow">
      <div class="col-3 border border-2 bg-primary" id="name">
        <h1 onmousemove="mouseHover()">Application Form</h1>
        <div class="col">
          <button onclick="onClick()">Click me</button>
        </div>
      </div>
      <div class="col-3 border border-2 bg-secondary">
        <div>
          <div id="col2" onclick="animationEvent()">
            Click me to start the animation.
          </div>
        </div>
      </div>

      <div class="col-3 border border-2 bg-primary text-center" id="col3">
        <div class="mb-3 mt-4">
          <p>
            Write in the input field and click outside the field to lose focus
            (blur).
          </p>
          <input
            id="fname"
            type="text"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm"
          />
        </div>
      </div>

      <div class="col-3 border border-2 bg-secondary text-center" id="col3">
        <div class="mb-3 mt-4">
          <p>
            When you leave the input field, a function is triggered which
            transforms the input text to upper case.
          </p>
          <input
            id="col3Fname"
            type="text"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm"
          />
        </div>
      </div>
    </div>

    <div class="row text-center">
      <div class="col-3 border border-2 bg-secondary p-2" id="row2col1">
        <div class="bg-danger-subtle">
          <p>Right-click in this box!</p>
          <p>Context menu will show.</p>
        </div>

        <div id="col3Div" class="bg-info-subtle">
          <p>Right-click in this box!</p>
          <p>Context menu is disabled.</p>
        </div>
        <script>
          const div = document.getElementById("col3Div");
          div.addEventListener("contextmenu", (e) => {
            e.preventDefault();
          });
        </script>
      </div>

      <div class="col-3 border border-2 bg-primary p-2">
        <div>
          <h2 id="doubleClick">Double Click Me</h2>
        </div>
        <script>
          document
            .getElementById("doubleClick")
            .addEventListener("dblclick", doubleClick);

          function doubleClick() {
            document.getElementById("doubleClick").style.color = "red";
          }
        </script>
      </div>

      <div class="col-3 border border-2 bg-secondary p-2">
        <div>
          <h1 id="row1col3">Mouse over me</h1>
        </div>
        <script>
          document
            .getElementById("row1col3")
            .addEventListener("mouseenter", mouseEnter);
          document
            .getElementById("row1col3")
            .addEventListener("mouseleave", mouseLeave);

          function mouseEnter() {
            document.getElementById("row1col3").style.color = "red";
          }

          function mouseLeave() {
            document.getElementById("row1col3").style.color = "black";
          }
        </script>
      </div>

      <div class="col-3 border border-2 bg-primary p-2">
        <div>
          <h2 id="row2col4">Click me.</h2>
        </div>
        <script>
          document.getElementById("row2col4").onmousedown = function () {
            mouseDown();
          };
          document.getElementById("row2col4").onmouseup = function () {
            mouseUp();
          };

          function mouseDown() {
            document.getElementById("row2col4").innerHTML =
              "The mouse button is held down.";
          }

          function mouseUp() {
            document.getElementById("row2col4").innerHTML =
              "You released the mouse button.";
          }
        </script>
      </div>
    </div>

    <div class="row text-center">
      <div class="col-3 border border-2 bg-primary p-2">
        <div>
          <h3>Online/Offline</h3>
        </div>
        <script>
          window.addEventListener("online", onFunction);
          window.addEventListener("offline", offFunction);

          function onFunction() {
            document.getElementById("demo").innerHTML =
              "Your browser is working online.";
          }

          function offFunction() {
            document.getElementById("demo").innerHTML =
              "Your browser is working offline.";
          }
        </script>
      </div>

      <div class="col-3 border border-2 bg-secondary p-2">
        <form class="mb-3 mt-4 p-2">
          <p>
            If you click submit, without filling out the text field, an alert
            message will occur.
          </p>
          <input
            id="row3col1"
            type="text"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm"
            required
          />
          <input class="btn-outline-dark btn-sm" type="submit" value="Submit" />
          <script>
            document
              .getElementById("row3col1")
              .addEventListener("invalid", invalid);

            function invalid() {
              alert("You must fill out the form!");
            }
          </script>
        </form>
      </div>

      <div class="col-3 border border-2 bg-primary p-2">
        <div class="mb-3 mt-4 p-2">
          <p>
            Press a key inside the text field to set a red background color.
          </p>
          <input
            id="row3col2"
            type="text"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm"
          />
        </div>
        <script>
          document
            .getElementById("row3col2")
            .addEventListener("keydown", myFunction);

          function myFunction() {
            document.getElementById("row3col2").style.backgroundColor = "red";
          }
        </script>
      </div>

      <div class="col-3 border border-2 bg-secondary p-2">
        <div class="mb-3 mt-4 p-2">
          <p>press a key to know which key is pressed</p>
          <h1 id="row3title"></h1>
        </div>
        <script>
          document.addEventListener("keypress", function (event) {
            document.getElementById("row3title").innerText = event.key;
          });
        </script>
      </div>
    </div>
  </div>
  <script src="/js/table_of_events.js"></script>
  <%- include('partials/footer') %>

